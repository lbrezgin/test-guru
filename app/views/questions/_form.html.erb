<h1><%= question_header(@question)%></h1>
<%= form_with(model: [@test, @question], local: true) do |form| %>
  <p>
    <%= form.label :body, 'Body' %>
    <%= form.text_field :body %>
  </p>
  <p>
    <%= form.submit 'Create' %>
  </p>
<% end %>
<%= link_to 'Back to all questions', test_questions_path(@question.test) %>
