<h1>All current test questions</h1>
<%= link_to 'New question', new_test_question_path(@test) %>
<table>
  <tr>
    <th>Body</th>
    <th cosplan="3">Actions</th>
  </tr>

  <% @questions.each do |question| %>
    <tr>
      <td><%= question.body %></td>
      <td><%= link_to 'Show', question_path(question) %></td>
      <td><%= link_to 'Edit', edit_question_path(question) %></td>
      <td><%= link_to 'Delete',
                      question_path(question),
                      method: :delete,
                      data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
</table>
<%= link_to 'Back to test', test_path(@test) %>
