<tr>
  <td><%= image_tag("badges/#{img(badge.rule)}", class: "my-badge") %></td>
  <td><%= badge.title %></td>
  <td><%= Badge.rules.key(badge.rule) %></td>
  <td><%= badge.rule_value %></td>
  <td class="align-middle"><%= link_to t(".show"), admin_badge_path(badge), class: 'btn btn-primary' %></td>
  <td class="align-middle">
    <%= link_to t(".delete"),
                admin_badge_path(badge),
                method: :delete,
                data: { confirm: t("admin.badges.index.sure") }, class: 'btn btn-primary' %>
  </td>
</tr>
